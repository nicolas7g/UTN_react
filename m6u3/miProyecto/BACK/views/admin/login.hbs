    <form action="/admin/login" method="post">
        <div class="form-group">

            <input type="text" class="form-control" id="inputEmail" aria-describedby="emailHelp" placeholder="Usuario"
                name="usuario" required autofocus>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <input type="password" class="form-control" id="inputPassword" placeholder="Password" name="password"
                required>
        </div>
        <div class="form-check mb-2">
            <input class="form-check-input" type="checkbox" id="autoSizingCheck" name="remember">
